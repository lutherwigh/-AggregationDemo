<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <variable
            name="gank_model"
            type="outlook.luxi96.module_gank.viewmodel.GankViewModel"
            />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:binding="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.design.widget.TabLayout
            android:id="@+id/gank_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextAppearance="@style/main_tab_text_appearance"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/colorPrimaryDark"
            app:tabSelectedTextColor="@color/colorPrimaryDark"
            app:tabTextColor="@android:color/black"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/gank_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            binding:adapter="@{gank_model.adapter}"
            binding:itemBinding="@{gank_model.itemBinding}"
            binding:items="@{gank_model.fragments}"
            binding:onPageSelectedCommand="@{gank_model.onPagerSelectCommand}"
            binding:pageTitles="@{gank_model.pageTitles}" />

    </LinearLayout>

</layout>

